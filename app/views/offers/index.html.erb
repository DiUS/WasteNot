<div class="row">
  <div class="col-md-3">
    <div class="list-group">
      <a class="list-group-item <%= "active" if @active_category_name == "All"%>" href="<%= offers_path %>">All</a>
      <% @categories.each do |cat| %>
        <a class="list-group-item <%= "active" if @active_category_name == cat.name %>" href="<%= offers_path %>?category_id=<%= cat.id %>"><%= cat.name %></a>
      <% end %>
    </div>
  </div>
  <div class="col-md-9">
    <% if @active_category_name == "All" %>
    <div class="jumbotron">
      <h1>Help, Recycle, Reuse, Give</h1>
      <p>Reduce waste, help others. Donate excess stock</p>
      <p><a class="btn btn-primary btn-lg" role="button">Learn more</a></p>
    </div>
    <% end %>
    <%= render 'offers/offer_cards', offers: @offers %>
  </div>
</div>
