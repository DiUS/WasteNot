<%= image_tag(@retailer.logo_url) if @retailer.logo? %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @retailer.name %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @retailer.bio %>
</p>

<p>
  <strong>Web page:</strong>
  <%= @retailer.web_page %>
</p>

<p>
  <strong>Contact name:</strong>
  <%= @retailer.contact_name %>
</p>

<p>
  <strong>Contact phone:</strong>
  <%= @retailer.contact_phone %>
</p>

<p>
  <strong>Contact email:</strong>
  <%= @retailer.contact_email %>
</p>

<h2>On Offer</h2>
<%= render 'offers/offer_cards', offers: @on_offer %>

<h2>Offers Accepted</h2>
<%= render 'offers/offer_cards', offers: @offer_taken %>
